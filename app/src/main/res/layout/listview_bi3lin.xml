<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="25dp">


    <TextView
        android:id="@+id/textView_lin1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:text="lin1"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView_lin2a"
        app:layout_constraintEnd_toStartOf="@+id/textView_lin1b"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_lin1b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="4dp"
        android:maxLines="1"
        android:text="lin1b"
        android:textAlignment="textEnd"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_lin1"
        app:layout_constraintTop_toTopOf="@+id/textView_lin1" />

    <TextView
        android:id="@+id/textView_lin2a"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="8dp"
        android:maxLines="1"
        android:text="lin2a"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/textView_lin3a"
        app:layout_constraintEnd_toStartOf="@+id/textView_lin2b"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/textView_lin3a"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="lin3a"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView_lin3b"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_lin2b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="4dp"
        android:text="lin2b"
        android:textAlignment="textEnd"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_lin2a"
        app:layout_constraintTop_toTopOf="@+id/textView_lin2a" />


    <TextView
        android:id="@+id/textView_lin3b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="lin3b"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_lin3a"
        app:layout_constraintTop_toTopOf="@+id/textView_lin3a" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />


</android.support.constraint.ConstraintLayout>